<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>

<GridPane alignment="TOP_CENTER" hgap="10" vgap="100" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="MenuController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>
   <children>
   
       <HBox alignment="CENTER" spacing="10">
      <children>
              <Text id="welcomeText" text="Are you READY?!" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
      </children>
       </HBox>
   
       <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <children>
              <HBox alignment="CENTER" spacing="10">
                 <children>
                     <Button fx:id="startButton" onAction="#start" text="GO!" />
                  <ImageView fx:id="settings" fitHeight="30.0" fitWidth="30.0" onMouseClicked="#settings" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@settings.png" />
                     </image>
                  </ImageView>
                 </children>
              </HBox>
      </children>
       </VBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
